alias wget="curl -C - -O"
alias g="git status"
alias reload="source ~/bin/dotfiles/bash/aliases"
alias ea="mate -w ~/bin/dotfiles/bash/aliases && reload"
alias ll='ls -Fls'
alias ee="mate -w ~/bin/dotfiles/bash/env && source ~/bin/dotfiles/bash/env"
alias svn-rm-r='find . -name ".svn" -type d -exec rm -rf {} \;'
alias redisd='redis-server /usr/local/etc/redis.conf'
alias aliases='cat ~/bin/dotfiles/bash/aliases'

alias go="git checkout"

alias git-ds_store='find . -name ".DS_Store" | xargs git rm'

function gg() {
	git add . -A
	git commit -v -a -m "$*"
}

function gra() {
	 git remote add origin git@github.com:cfeduke/$1.git
}

function take() {
	mkdir $1
	cd $1
}

function git-rm-after() {
	for i in `git status | grep deleted | awk '{print $3}'`; do git rm $i; done
}

function git-whoops() {
  git add . -A
  git reset --hard HEAD
}

function git-xcode() {
  cp $HOME/bin/dotfiles/git/xcode4_gitignore ./.gitignore
  cp $HOME/bin/dotfiles/git/xcode4_gitattributes ./.gitattributes
}