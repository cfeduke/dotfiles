alias wget="curl -C - -O"
alias g="git status"
alias reload="source ~/bin/dotfiles/bash/aliases"
alias ea="mate -w ~/bin/dotfiles/bash/aliases && reload"
alias ll='ls -Fls'

function gg() {
	git add .
	git commit -v -a -m "$*"
}

function take() {
	mkdir $1
	cd $1
}

function git-rm-after() {
	for i in `git status | grep deleted | awk '{print $3}'`; do git rm $i; done
}